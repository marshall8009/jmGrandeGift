@model AddressDisplayViewModel

@{
	ViewData["Title"] = "Addresses";
}

<div class="container-fluid">
	<div class="my-3">
		<a asp-action="Create" asp-controller="Address" class="btn btn-success btn-sm">Add New Address</a>
		<a asp-action="Profile" asp-controller="Customer" class="btn btn-info btn-sm">Back to Profile</a>
	</div>

	<table class="table table-striped table-bordered table-sm">
		<thead>
			<tr>
				<th class="text-left">Street Number</th>
				<th class="text-left">Street Name</th>
				<th class="text-left">City</th>
				<th class="text-left">State</th>
				<th class="text-left">Postcode</th>
				<th class="text-left">Country</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		@foreach (var item in Model.Addresses)
		{

			<tbody>
				<tr>
					<td>@item.StreetNumber</td>
					<td>@item.StreetName</td>
					<td>@item.City</td>
					<td>@item.State</td>
					<td>@item.Postcode</td>
					<td>@item.Country</td>
					<td class="text-center">
						<a class="btn btn-warning btn-sm" asp-action="Update" asp-controller="Address" asp-route-id="@item.AddressId">Edit Address</a>
						<a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Address" asp-route-id="@item.AddressId">Remove Address</a>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr></tr>
			</tfoot>

		}
	</table>
</div>
