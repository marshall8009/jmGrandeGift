
@{
    ViewData["Title"] = "Home";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="img-fluid d-block mx-auto carouselImage" src="~/images/christmasHamper.jpg" alt="First slide">
		</div>
		<div class="carousel-item">
			<img class="img-fluid d-block mx-auto carouselImage" src="~/images/cosmeticsHamper.jpg" alt="Second slide">
		</div>
		<div class="carousel-item">
			<img class="img-fluid d-block mx-auto carouselImage" src="~/images/chocolateHamper.jpg" alt="Third slide">
		</div>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		<span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<div class="container-fluid">
	<h2>Our Mission</h2>
	<p>
		At Grande Gift, our mission is to provide quality products to our customers via our online retail store, keeping costs low and fast delivery services.
		We pride ourselves on our customer service and strive to ensure every customer is fully satisfied with their product.
	</p>
</div>
