@model ProductUpdateViewModel

@{
	ViewData["Title"] = "Update Product";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
				<div class="mt-3">
					<p>Id @Model.ProductId</p>
					<input asp-for="ProductId" hidden="hidden" />
				</div>
				<div class="mt-3">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
				</div>
				<div class="mt-3">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" />
				</div>
				<div class="mt-3">
					<input type="file" name="image" />
				</div>
				<div class="mt-3">
					<label asp-for="Discontinue">Discontinue Product?</label>
					<input asp-for="Discontinue" />
				</div>
				<div class="mt-3">
					<select asp-for="CategoryId" style="min-width:250px;">

						@foreach (var item in Model.Cat)
						{
							<option value="@item.CategoryId">@item.CategoryName</option>
						}
					</select>
				</div>
				<div class="mt-3">
					<label asp-for="Details"></label>
					<textarea asp-for="Details" class="form-control" rows="5" style="resize: none;"></textarea>
				</div>
				<div class="my-3">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-action="AdminDisplay" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
