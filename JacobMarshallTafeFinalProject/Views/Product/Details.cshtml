@model ProductDetailsViewModel

@{
	ViewData["Title"] = "Products";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="card my-4 col-md-10">
			<img class="card-img-top img-fluid" src="~/images/@Model.Image" alt="">
			<div class="card-body">
				<h3 class="card-title">@Model.ProductName</h3>
				<h4>@Model.Price.ToString("c")</h4>
				<p class="card-text">@Model.ProductDetails</p>
				<p class="card-text">Category: @Model.CategoryName</p>
				<span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
				4.0 stars
				<div class="m-2">
					@if (Model.Discontinue == false)
					{
						<form id="@Model.ProductId" asp-action="AddToCart" asp-controller="Cart" method="post">
							<input hidden="hidden" asp-for="@Model.ProductId" />
							<input type="hidden" name="returnUrl"
								   value="@ViewContext.HttpContext.Request.PathQuery()" />
							<span class="card-text p-1">
								<button type="submit" class="btn btn-success btn-sm pull-right font-weight-bold"
										style="float:right;">
									Add to Cart
								</button>
							</span>
						</form>
					}
					else
					{
						<h5 class="text-capitalize">This product has been discontiued</h5>
					}

				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>