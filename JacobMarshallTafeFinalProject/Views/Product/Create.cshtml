@model ProductCreateViewModel

@{
	ViewData["Title"] = "Create Product";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="mt-3">
					<input asp-for="ProdName" class="form-control" placeholder="Product Name" />
					<span asp-validation-for="ProdName" class="text-danger"></span>
				</div>
				<div class="mt-3">
					<input asp-for="ProdDetails" class="form-control" placeholder="Product Details" />
					<span asp-validation-for="ProdDetails" class="text-danger"></span>
				</div>
				<div class="mt-3">
					<input asp-for="Price" class="form-control" placeholder="Price" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mt-3">
					<input placeholder="Image upload" type="file" name="image" />
				</div>
				<div class="mt-3">
					<select asp-for="CategoryId" style="min-width:250px;">

						@foreach (var item in Model.Cat)
						{
							<option value="@item.CategoryId">@item.CategoryName</option>
						}
					</select>
				</div>
				<div class="my-3">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-action="AdminDisplay" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
