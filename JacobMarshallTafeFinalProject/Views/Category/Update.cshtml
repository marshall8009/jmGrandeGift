@model CategoryUpdateViewModel

@{
	ViewData["Title"] = "Update Category";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form asp-action="Update" asp-controller="Category" method="post">
				<div class="mt-3">
					<p>Id @Model.CategoryId</p>
					<input asp-for="CategoryId" hidden="hidden" />
				</div>
				<div class="mt-3">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
				</div>
				<div class="mt-3">
					<label asp-for="Details"></label>
					<textarea asp-for="Details" class="form-control" rows="5" style="resize: none;"></textarea>
				</div>
				<div class="my-3">
					<input type="submit" value="Save" class="btn btn-success" />
					<a asp-action="Display" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
