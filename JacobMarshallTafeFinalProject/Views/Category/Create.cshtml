@model CategoryCreateViewModel

@{
	ViewData["Title"] = "Create Category";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form asp-action="Create" asp-controller="Category" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="mt-3">
					<input asp-for="CatName" class="form-control" placeholder="Category Name" />
					<span asp-validation-for="CatName"></span>
				</div>
				<div class="mt-3">
					<input asp-for="CatDetails" class="form-control" placeholder="Category Details" />
					<span asp-validation-for="CatDetails"></span>
				</div>
				<div class="my-3">
					<input type="submit" value="Add Category" class="btn btn-success" />
					<a asp-action="Display" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>