@model OrderCheckoutViewModel

@{
	ViewData["Title"] = "Checkout";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div col-md-6>
			<div class="mt-3">
				<h2>Check out now</h2>
				<p>We'll process your order and ship your items right away!</p>


			</div>
			<div>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<form asp-action="Checkout" asp-controller="Order" method="post">
					<div class="mt-3">
						<p>Select from your addresses.</p>
						<select asp-for="AddressId" asp-items="@Model.Addresses" style="min-width:200px;">
							<option value="">Please select an address...</option>
						</select>
					</div>

					<div class="mt-3 form-group">
						<h3>Ship To</h3>
						<input type="text" class="form-control" asp-for="Name" placeholder="Name" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="mt-3">
						<h3>Address</h3>
						<input class="form-control" asp-for="Line1" placeholder="Street Address" />
						<span asp-validation-for="Line1" class="text-danger"></span>
						<input class="form-control mt-2" asp-for="Line2" />
						<input class="form-control mt-2" asp-for="Line3" />
					</div>
					<div class="mt-3">
						<h3>City</h3>
						<input class="form-control" asp-for="City" placeholder="City" />
						<span asp-validation-for="City" class="text-danger"></span>
					</div>
					<div class="mt-3">
						<h3>State</h3>
						<input class="form-control" asp-for="State" placeholder="State" />
						<span asp-validation-for="State" class="text-danger"></span>
					</div>
					<div class="mt-3">
						<h3>Postcode</h3>
						<input class="form-control" asp-for="Postcode" placeholder="Postcode" />
						<span asp-validation-for="Postcode" class="text-danger"></span>
					</div>
					<div class="mt-3">
						<h3>Country</h3>
						<input class="form-control" asp-for="Country" placeholder="Country" />
						<span asp-validation-for="Country" class="text-danger"></span>
					</div>
					<div class="my-3">
						<input type="submit" class="btn btn-warning font-weight-bold" value="Complete Order" />
					</div>
				</form>
			</div>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
